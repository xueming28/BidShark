{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/index.ts"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|svg|html))$",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/homePage.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}